{
  "id": null,
  "title": "HTTP Request Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "auto",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [

    {
      "type": "stat",
      "title": "Total Requests",
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "prom_datasource"},
      "targets": [
        { 
          "expr": "sum(${metric_choice})",
          "refId": "A"
        }
      ],  
      "fieldConfig": {
        "defaults": {
          "unit": ""
        },
        "overrides": []
      },  
      "gridPos": { "h": 3, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total Failure Rate",
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "sum(${metric_choice}{is_success='false'})",
          "refId": "A"
        }
      ],  
      "fieldConfig": { "defaults": { "unit": "Requests" }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total Node/Python",
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "sum(node_http_requests_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 12, "y": 0 }
    },
    {
      "type": "stat",
      "title": "rate(process_cpu_seconds_total[1m]) * 100",
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 18, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Requests per Endpoint (last 5m)",
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "rate(node_http_requests_total[5m])",
          "legendFormat": "Node: {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "rate(python_http_requests_total[5m])",
          "legendFormat": "Python: {{endpoint}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 3 }
    }
  ],
  "templating": { "list": [
    {
      "type": "custom",
      "name": "metric_choice",
      "label": "Metrik w√§hlen",
      "query": "node_http_requests_total,python_http_requests_total",
      "hide": 0,
      "includeAll": false,
      "multi": false,
      "options": [],
      "current": {
        "selected": true,
        "text": "node_http_requests_total",
        "value": "node_http_requests_total"
      },
      "refresh": 0,
      "sort": 1
    }


  ] }
}
