{
  "id": null,
  "title": "HTTP Request Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "auto",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Error Rate",
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "prom_datasource"},
      "targets": [
        { 
          "expr": "sum(increase(k6_http_reqs_total[$__rate_interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Requests"
        },
        "overrides": []
      },  
      "gridPos": { "h": 3, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total Http requests",
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "sum(k6_http_reqs_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Requests" }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "P99",
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_req_duration_seconds_bucket[1m])) by (le))",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 12, "y": 0 }
    },
    {
      "type": "stat",
      "title": "P95",
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "k6_http_req_duration_p95",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 3, "w": 6, "x": 18, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Requests per Endpoint (last 5m)",
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "prom_datasource" },
      "targets": [
        {
          "expr": "rate(node_http_requests_total[5m])",
          "legendFormat": "Node: {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "rate(python_http_requests_total[5m])",
          "legendFormat": "Python: {{endpoint}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 3 }
    }
  ],
  "templating": { "list": [] }
}
